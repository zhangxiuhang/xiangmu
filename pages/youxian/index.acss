/*选择配送地址弹框样式开始*/
.a{
    width:100%;
    position:fixed;
    top:0;
    left:0;
    z-index:1001;
    height:100%;
}
#dialogBg {
  width:100%;
  height:100%;
  background-color:#000000;
  opacity:.5;
  filter:alpha(opacity=60);
  position:fixed;
  top:0;
  left:0;
  z-index:2;
}
.drawer_box { 
  width: 650rpx;    
  position: fixed;  
  top: 50%;  
  left: 0;  
  z-index: 1001;  
  background: #FAFAFA;  
  margin: -170px 50rpx 0 50rpx;  
  border-radius: 10px;  
}
.drawer_box .image {
  width: 100%;
  height:240px;
  display:inline-block;
  overflow:hidden;
}
.dialogIco {
    width: 60px;
    height: 60px;
    position: absolute;
    top: -35px;
    left: 50%;
    margin-left: -25px;
  }
.dialogIco_arrow {
    width:40px;
    height:40px;
    position:relative;
    top:-17px;
    left:0px;
    z-index:998;
  }
.drawer_title{ 
  font:20px "microsoft yahei";
  text-align:center;
  margin:0 auto;
  border-bottom:1px dotted #ccc;
  letter-spacing:1px;
  padding:10px 0;
  background-color:#64C14C;
  border-top-left-radius:10px;
  border-top-right-radius:10px;
  color:#ffffff;
  font-size:16px;
  height:50px;
  line-height:65px;
}
/*.drawer_title{ 
