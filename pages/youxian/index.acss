/*选择地址start*/
.tation-up {
  z-index: 1;
  top: 0px;
  color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  position: relative;
  top: -15px;
  left: 0px;
}
.tation-up .tation-dir {
  background: #e9e9e9;
  padding: 0px 10px;
  border-radius: 15px;
  width: 80%;
  height: 30px;
  line-height: 30px;
}

.tation-dir {
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.pos_item {
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  float: left;
  width: 96%;
  color: #515151;
  font-size: 14px;
}
.icon-bottom {
  float: left;
}

.arrow_d {
  width: 13px;
  height: 13px;
}

